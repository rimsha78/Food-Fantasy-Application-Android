<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/dashboard_cardview"
        android:layout_width="221dp"
        android:layout_height="210dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="#E6E6E6"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="8dp"

        >

        <!-- Main Content View -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="172dp"
                android:layout_height="148dp"
                android:contentDescription="@string/menu_dashboard"
                android:padding="10dp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.043"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:srcCompat="@drawable/total_sales"
                tools:layout_editor_absoluteY="1dp" />

            <TextView
                android:id="@+id/caption"
                android:layout_width="152dp"
                android:layout_height="39dp"
                android:layout_marginTop="100dp"
                android:textSize="30sp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.231"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.774"
                tools:text="@string/menu_dashboard" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>