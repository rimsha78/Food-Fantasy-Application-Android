<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dishes.Edit_dish_baker">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>



    <ImageView
        android:id="@+id/edit_dish_image_baker"
        android:layout_width="388dp"
        android:layout_height="175dp"
        android:src="@drawable/edit_dish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="9dp"
        tools:srcCompat="@tools:sample/avatars" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:text="Title"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_below="@+id/edit_dish_image_baker"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edittext"
        android:layout_below="@+id/text"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Edit Title Here"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:text="Description"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_below="@+id/edittext"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edittext1"
        android:layout_below="@+id/text1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Edit Descriotion Here"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:text="Price"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_below="@+id/edittext1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edittext2"
        android:layout_below="@+id/text2"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Edit Price Here"

        />
</RelativeLayout>
</ScrollView>