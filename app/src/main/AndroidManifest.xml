<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.food_fantasy">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_splash"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_splash"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.dishes.Add_dishes"></activity>
        <activity android:name=".ui.tools.editProfile" />
        <activity android:name=".ui.slideshow.Tab_activity" />
        <activity android:name=".order_details" />
        <activity
            android:name=".ui.dishes.Edit_dish_baker"
            android:label="@string/edit_dish_baker_title" />
        <activity
            android:name=".home_baker"
            android:label="@string/title_activity_home_baker"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".splash"
            android:theme="@style/AppTheme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.login.LoginActivity" />
        <activity
            android:name=".ui.signup.SignUpActivity"
            android:label="@string/create_new_account" />
        <activity
            android:name=".ui.signup.Verification_Signup"
            android:label="@string/verification" />
    </application>

</manifest>